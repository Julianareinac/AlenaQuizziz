<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uniquindio.alena.controllers.CrearExamenController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <VBox spacing="10.0">
      <Text text="Banco de Preguntas" />
      <ListView fx:id="questionListView" prefHeight="172.0" prefWidth="541.0" />
      <Text layoutX="10.0" layoutY="23.0" text="Examen" />
      <ListView fx:id="listaExamenActual" prefHeight="156.0" prefWidth="435.0" />
      <Button text="Crear Nueva Pregunta" />
      <Button text="Añadir al Examen" />
   </VBox>

   <VBox spacing="10.0">
      <Text text="Configuración del Examen" />
      <TextField fx:id="txtNombreExamen" promptText="Nombre del examen" />
      <TextField fx:id="txtTiempoLimite" promptText="Tiempo límite (minutos)" />
      <TextField fx:id="txtDescripcion" promptText="Descripción del examen" />
      <Button text="Guardar Examen" />
      <Button text="Eliminar del Examen" />
      <ComboBox editable="true" prefWidth="150.0" promptText="Elegir tema" />
   </VBox>
</HBox>
