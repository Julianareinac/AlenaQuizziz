<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Text?>
<HBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.uniquindio.alena.controllers.CrearExamenController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
   </padding>

   <VBox spacing="10.0">
      <Text text="Banco de Preguntas"/>
      <ListView fx:id="questionListView"/>
      <Button text="Añadir al Examen"/>
      <Button text="Crear Nueva Pregunta"/>
   </VBox>

   <VBox spacing="10.0">
      <Text text="Examen Actual"/>
      <ListView fx:id="listaExamenActual"/>
      <Button text="Eliminar del Examen"/>
      <Button text="Editar Pregunta"/>
   </VBox>

   <VBox spacing="10.0">
      <Text text="Configuración del Examen"/>
      <TextField fx:id="txtNombreExamen" promptText="Nombre del examen"/>
      <TextField fx:id="txtTiempoLimite" promptText="Tiempo límite (minutos)"/>
      <TextField fx:id="txtDescripcion" promptText="Descripción del examen"/>
      <Button text="Guardar Examen" />
   </VBox>
</HBox>